#include <stdio.h>

int main() {
    int pages[30], frames[10];
    int n, f;
    int i, j, k = 0;
    int faults = 0, found;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &pages[i]);
    }

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames
    for (i = 0; i < f; i++) {
        frames[i] = -1;
    }

    printf("\nPage\tFrames\n");

    for (i = 0; i < n; i++) {
        found = 0;

        // Check page hit
        for (j = 0; j < f; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        // Page fault
        if (found == 0) {
            frames[k] = pages[i];
            k = (k + 1) % f;
            faults++;
        }

        // Print frame status
        printf("%d\t", pages[i]);
        for (j = 0; j < f; j++) {
            if (frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);

    return 0;
}

INPUT : Enter number of pages: 8
Enter page reference string:
1 5 2 3 4 6 4 4
Enter number of frames: 4

OUTPUT: Page	Frames
1	1 - - - 
5	1 5 - - 
2	1 5 2 - 
3	1 5 2 3 
4	4 5 2 3 
6	4 6 2 3 
4	4 6 2 3 
4	4 6 2 3 

Total Page Faults = 6
