#include <stdio.h>
#include <string.h>

int main() {
    char files[20][20];
    int n = 0, choice, i;
    char name[20];
    int found;

    while (1) {
        printf("\n--- Single Level Directory ---\n");
        printf("1. Create File\n");
        printf("2. Search File\n");
        printf("3. Delete File\n");
        printf("4. Display Files\n");
        printf("5. Exit\n");

        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1:
            printf("Enter file name: ");
            scanf("%s", name);

            found = 0;
            for (i = 0; i < n; i++) {
                if (strcmp(files[i], name) == 0) {
                    found = 1;
                    break;
                }
            }

            if (found)
                printf("File already exists!\n");
            else {
                strcpy(files[n], name);
                n++;
                printf("File created successfully\n");
            }
            break;

        case 2:
            printf("Enter file name to search: ");
            scanf("%s", name);

            found = 0;
            for (i = 0; i < n; i++) {
                if (strcmp(files[i], name) == 0) {
                    found = 1;
                    break;
                }
            }

            if (found)
                printf("File found\n");
            else
                printf("File not found\n");
            break;

        case 3:
            printf("Enter file name to delete: ");
            scanf("%s", name);

            found = 0;
            for (i = 0; i < n; i++) {
                if (strcmp(files[i], name) == 0) {
                    found = 1;
                    break;
                }
            }

            if (found) {
                for (; i < n - 1; i++)
                    strcpy(files[i], files[i + 1]);
                n--;
                printf("File deleted successfully\n");
            } else
                printf("File not found\n");
            break;

        case 4:
            if (n == 0)
                printf("Directory is empty\n");
            else {
                printf("Files in directory:\n");
                for (i = 0; i < n; i++)
                    printf("%s\n", files[i]);
            }
            break;

        case 5:
            return 0;

        default:
            printf("Invalid choice\n");
        }
    }
}
INPUT : --- Single Level Directory ---
1. Create File
2. Search File
3. Delete File
4. Display Files
5. Exit

Enter your choice: 1
Enter file name: file1

Enter your choice: 1
Enter file name: file2

Enter your choice: 4

Enter your choice: 2
Enter file name to search: file1

Enter your choice: 3
Enter file name to delete: file1

Enter your choice: 4

Enter your choice: 5


OUTPUT: File created successfully
File created successfully

Files in directory:
file1
file2

File found

File deleted successfully

Files in directory:
file2
