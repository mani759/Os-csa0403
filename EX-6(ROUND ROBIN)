#include <stdio.h>

int main() {
    int n, i, time = 0, tq;
    int bt[10], rem_bt[10];
    int wt[10], tat[10];
    float avg_wt = 0, avg_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Enter burst time for process %d: ", i + 1);
        scanf("%d", &bt[i]);
        rem_bt[i] = bt[i];
        wt[i] = 0;
    }

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    while (1) {
        int done = 1;

        for (i = 0; i < n; i++) {
            if (rem_bt[i] > 0) {
                done = 0;

                if (rem_bt[i] > tq) {
                    time += tq;
                    rem_bt[i] -= tq;
                } else {
                    time += rem_bt[i];
                    wt[i] = time - bt[i];
                    rem_bt[i] = 0;
                }
            }
        }

        if (done == 1)
            break;
    }

    for (i = 0; i < n; i++) {
        tat[i] = bt[i] + wt[i];
        avg_wt += wt[i];
        avg_tat += tat[i];

        printf("Process %d: WT = %d, TAT = %d\n",
               i + 1, wt[i], tat[i]);
    }

    avg_wt /= n;
    avg_tat /= n;

    printf("\nAverage Waiting Time = %.2f", avg_wt);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat);

    return 0;
}

INPUT:  Enter number of processes: 3
Enter burst time for process 1: 11
Enter burst time for process 2: 6
Enter burst time for process 3: 8
Enter time quantum: 4


OUTPUT : Process 1: WT = 14, TAT = 25
Process 2: WT = 12, TAT = 18
Process 3: WT = 14, TAT = 22

Average Waiting Time = 13.33
Average Turnaround Time = 21.67
