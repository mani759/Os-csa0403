#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

#define MAX 10

int buffer[MAX];
int in = 0, out = 0;
int buffer_size, items;

sem_t empty, full, mutex;

void* producer(void* arg) {
    int i;
    for (i = 1; i <= items; i++) {
        sem_wait(&empty);
        sem_wait(&mutex);

        buffer[in] = i;
        printf("Producer produced item %d\n", buffer[in]);
        in = (in + 1) % buffer_size;

        sem_post(&mutex);
        sem_post(&full);

        sleep(1);
    }
    return NULL;
}

void* consumer(void* arg) {
    int i, item;
    for (i = 1; i <= items; i++) {
        sem_wait(&full);
        sem_wait(&mutex);

        item = buffer[out];
        printf("Consumer consumed item %d\n", item);
        out = (out + 1) % buffer_size;

        sem_post(&mutex);
        sem_post(&empty);

        sleep(1);
    }
    return NULL;
}

int main() {
    pthread_t p, c;

    printf("Enter buffer size: ");
    scanf("%d", &buffer_size);

    printf("Enter number of items: ");
    scanf("%d", &items);

    sem_init(&empty, 0, buffer_size);
    sem_init(&full, 0, 0);
    sem_init(&mutex, 0, 1);

    pthread_create(&p, NULL, producer, NULL);
    pthread_create(&c, NULL, consumer, NULL);

    pthread_join(p, NULL);
    pthread_join(c, NULL);

    return 0;
}

INPUT : Enter buffer size: 5
Enter number of items: 3

OUTPUT : Producer produced item 1
Consumer consumed item 1
Producer produced item 2
Consumer consumed item 2
Producer produced item 3
Consumer consumed item 3
