#include <stdio.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd[2];
    pid_t pid;
    char write_msg[50];
    char read_msg[50];

    // Create pipe
    if (pipe(fd) == -1) {
        printf("Pipe creation failed\n");
        return 1;
    }

    pid = fork();

    if (pid == 0) {
        // Child Process
        close(fd[1]); // Close write end
        read(fd[0], read_msg, sizeof(read_msg));
        printf("Child Process received message: %s\n", read_msg);
        close(fd[0]);
    }
    else if (pid > 0) {
        // Parent Process
        close(fd[0]); // Close read end
        printf("Enter message to send to child: ");
        fgets(write_msg, sizeof(write_msg), stdin);
        write(fd[1], write_msg, strlen(write_msg) + 1);
        close(fd[1]);
    }
    else {
        printf("Fork failed\n");
    }

    return 0;
}

INPUT: Enter message to send to child: hello 
OUTPUT: Child Process received message: hello 
