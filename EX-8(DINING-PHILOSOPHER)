#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

#define MAX 10

int n;
sem_t forks[MAX];
pthread_t philosophers[MAX];

void* dine(void* arg) {
    int i = *((int*)arg);

    printf("Philosopher %d is thinking\n", i);
    sleep(1);

    sem_wait(&forks[i]);               // Take left fork
    sem_wait(&forks[(i + 1) % n]);     // Take right fork

    printf("Philosopher %d is eating\n", i);
    sleep(2);

    sem_post(&forks[i]);               // Release left fork
    sem_post(&forks[(i + 1) % n]);     // Release right fork

    printf("Philosopher %d finished eating\n", i);
    return NULL;
}

int main() {
    int i;
    int phil[MAX];

    printf("Enter number of philosophers: ");
    scanf("%d", &n);

    if (n < 2 || n > MAX) {
        printf("Invalid number of philosophers\n");
        return 1;
    }

    for (i = 0; i < n; i++) {
        sem_init(&forks[i], 0, 1);
        phil[i] = i;
    }

    for (i = 0; i < n; i++) {
        pthread_create(&philosophers[i], NULL, dine, &phil[i]);
    }

    for (i = 0; i < n; i++) {
        pthread_join(philosophers[i], NULL);
    }

    return 0;
}

INPUT : Enter number of philosophers: 5

OUTPUT:   Philosopher 0 is thinking
Philosopher 2 is thinking
Philosopher 1 is thinking
Philosopher 4 is thinking
Philosopher 3 is thinking
Philosopher 0 is eating
Philosopher 2 is eating
Philosopher 0 finished eating
Philosopher 4 is eating
Philosopher 1 is eating
Philosopher 2 finished eating
Philosopher 1 finished eating
Philosopher 4 finished eating
Philosopher 3 is eating
Philosopher 3 finished eating
